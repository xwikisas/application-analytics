      ],
      'entryDescriptor': {
        'idProperty': 'pageTitle'
      }
    }
  })
  #analytics_getMacroId('entryPagesMacro', $macroId)

  {{liveData
    id="$macroId"
    properties="pageTitle, entrances, visits, bounces, actions"
    source='liveTable'
    sourceParameters="$parameters"
    sort='entrances:desc'
  }}$jsontool.serialize($liveDataConfig){{/liveData}}

  #set ($rowEvolutionParams = {
    'entrances': 'entry_nb_visits',
    'bounces': 'entry_bounce_count',
