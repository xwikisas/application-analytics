    <property>
      <code>define('analyticsConfigMessages', {
  prefix: 'analytics.config.checkConnection.',
  keys: [
    'error',
    'loading',
    'success',
    'disabled'
  ]
});

require(['jquery', 'xwiki-l10n!analyticsConfigMessages', 'xwiki-meta'], ($, l10n, xm) =&gt; {

  $(document).ready(() =&gt; {
    const initialValue = $('#Analytics\\.Code\\.ConfigurationClass_0_lastSeenUpdateInterval').val();
    if (initialValue !== "custom")
    {
      $('#Analytics\\.Code\\.ConfigurationClass_0_lastSeenStartDate').closest('dl').hide();
      $('#Analytics\\.Code\\.ConfigurationClass_0_lastSeenEndDate').closest('dl').hide();
    }
  });
  $('#Analytics\\.Code\\.ConfigurationClass_0_lastSeenUpdateInterval').on('change', function () {
    const selectedValue = $(this).val();
    if (selectedValue !== "custom")
    {
      $('#Analytics\\.Code\\.ConfigurationClass_0_lastSeenStartDate').closest('dl').hide();
      $('#Analytics\\.Code\\.ConfigurationClass_0_lastSeenEndDate').closest('dl').hide();
      return;
    }
    $('#Analytics\\.Code\\.ConfigurationClass_0_lastSeenStartDate').closest('dl').show();
    $('#Analytics\\.Code\\.ConfigurationClass_0_lastSeenEndDate').closest('dl').show();
  });

  let notification;
  $('#checkMatomoConnection').on('load', function () {
    notification = new XWiki.widgets.Notification(l10n['loading'], 'inprogress');
   // Wait for Matomo to process the request.
    setTimeout(() =&gt; {
        checkConnection();
    }, 2000);
  });

  // On save, check that the added configurations are correct. For this, a hidden iframe is used to load a page with
  // these configuration and then it's checked if the request was registered by Matomo.
  $(document).on('xwiki:document:saved', function (e) {
    let currentURL = new URL(window.location.href);
    let random = Math.random().toString().substring(2, 15);
    // Add a token to the current URL in order to identify the request on the Matomo side.
    currentURL.searchParams.set("checkMatomoConnection", `${xm.userReference}${random}`);
    $('#checkMatomoConnection').attr('src', currentURL.toString());
  });

  function checkConnection() {
    const params = {
      'pageUrl': $('#checkMatomoConnection').attr('src')
    }
    const queryString = $.param(params);
    let getLastVisitsDetailsJSONRef = XWiki.Model.resolve('Analytics.Code.GetLastVisitsDetailsJSON', XWiki.EntityType.DOCUMENT);
    let url = new XWiki.Document(getLastVisitsDetailsJSONRef).getURL('get');
    $.getJSON(`${url}?${queryString}`)
      .done((data) =&gt; {
        if (data.status === "trackingDisabled")
        {
          notification.replace(new XWiki.widgets.Notification(l10n['disabled'], 'done'));
        } else if (data.length) {
          notification.replace(new XWiki.widgets.Notification(l10n['success'], 'done'));
        } else {
          notification.replace(new XWiki.widgets.Notification(l10n['error'], 'error'));
        }
      })
      .fail(() =&gt; {
        notification.replace(new XWiki.widgets.Notification(l10n['error'], 'error'));
      });
  }
});
